@model IEnumerable<DotNetPizza.Models.PizzaViewModel.PizzaViewModel>
@{
    ViewData["Title"] = "Nos pizzas";
}

<div class="row">
    <div class="col-md-4 col-md-offset-2 vcenter">
        <h2>Nos pizzas Admin</h2>
    </div>
    <div class="col-md-4 vcenter text-right">
        <a asp-action="Create" class="btn btn-primary">Nouvelle pizza</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Image)</th>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.PriceHT)</th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/@item.Image">
                        </td>
                        <td>@item.Title</td>
                        <td>@string.Format("{0:C2}", item.PriceTTC())</td>
                        <td class="action">
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="Pizza" asp-action="Details" asp-route-id="@item.PizzaID">
                                <span class="glyphicon glyphicon-tasks"></span>
                            </a>
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="Pizza" asp-action="Edit" asp-route-id="@item.PizzaID">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a class="btn btn-danger" asp-area="Admin" asp-action="Edit" asp-route-id="@item.PizzaID">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<div class="container-modal">

</div>

@section Scripts{
    <script src="~/js/pizza-controller.js"></script>
}